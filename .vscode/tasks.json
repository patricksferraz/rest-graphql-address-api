{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "python-exec",
            "type": "shell",
            "command": "/opt/anaconda3/envs/${workspaceFolderBasename}/bin/python",
            "args": ["${file}", ">", "out.json"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "python-gen",
            "type": "shell",
            "command": "/opt/anaconda3/envs/${workspaceFolderBasename}/bin/python",
            "args": [
                "${file}",
                "-p",
                "db/tables",
                "-s",
                "db/struct_tables.json"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
